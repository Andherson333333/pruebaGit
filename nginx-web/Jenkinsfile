pipeline {
    agent any

    stages {
        stage('Construir Imagen Docker') {
            steps {
                script {
                    // Generar un nombre único basado en la marca de tiempo
                    def timestamp = new Date().format('yyyyMMddHHmmss')
                    def imageName = "nginx-web:${timestamp}"

                    // Construir la imagen Docker utilizando el Dockerfile
                    docker.build(imageName, '-f Dockerfile .')
                }
            }
        }

        stage('Desplegar en Nginx') {
            steps {
                script {
                    // Utilizar el nombre de la imagen generada en la etapa anterior
                    def timestamp = new Date().format('yyyyMMddHHmmss')
                    def imageName = "nginx-web:${timestamp}"

                    // Ejecutar un contenedor Docker de Nginx y desplegar la página web
                    docker.image(imageName).withRun('-p 8080:80') {
                        // No es necesario copiar los archivos aquí, ya que el Dockerfile debe manejarlo
                    }
                }
            }
        }
    }
}

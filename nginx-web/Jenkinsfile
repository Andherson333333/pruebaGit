pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Construir la imagen Docker a partir del Dockerfile en el directorio actual
                    sh 'docker build -t andherson -f Dockerfile .'
                }
            }
        }

        stage('Ejecutar Contenedor') {
            steps {
                script {
                    // Ejecutar un contenedor basado en la imagen Docker construida
                    docker.image('andherson').inside('-p 8080:80') {
                        // Agrega aqu√≠ cualquier comando o tarea que desees ejecutar dentro del contenedor
                    }
                }
            }
        }
    }
}
